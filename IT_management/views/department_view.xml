<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Department Action Window -->
<record id='parc_informatique_department_action_form' model='ir.actions.act_window'>
    <field name="name">parc_informatique Department</field>
    <field name="res_model">parc_informatique.department</field>
    <field name="view_mode">tree,form</field>
</record>

<!-- Department Menu Items -->
<menuitem name="parc_informatique" id="parc_informatique_main_menu"/> 
<menuitem name="department" id="parc_informatique_department_menu" parent="parc_informatique_main_menu" action="parc_informatique_department_action_form"/>

    <data>
        <!-- Department Form View -->
        <record id="view_department_form" model="ir.ui.view">
            <field name="name">parc_informatique.department.form</field>
            <field name="model">parc_informatique.department</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <!-- Define the fields you want to display in the department form view -->
                        <field name="name"/>
                        <field name="description"/>
                        <!-- Add other department-specific fields to display -->
                        <!-- <field name="users" widget="many2many_tags"/> -->
                        <field name="assets" widget="many2many_tags"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Department Tree View -->
        <record id="view_department_tree" model="ir.ui.view">
            <field name="name">parc_informatique.department.tree</field>
            <field name="model">parc_informatique.department</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Define the columns you want to display in the department tree view -->
                    <field name="name"/>
                    <field name="description"/>
                    <!-- <field name="users"/> -->
                    <field name="assets" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <!-- Department Search View -->
        <record id="view_department_search" model="ir.ui.view">
            <field name="name">parc_informatique.department.search</field>
            <field name="model">parc_informatique.department</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Define search criteria for departments -->
                    <field name="name"/>
                    <field name="description"/>
                    <!-- <field name="users"/> -->
                    <field name="assets"/>
                </search>
            </field>
        </record>

        <!-- ... Existing User and Asset Views and Actions ... -->
    </data>
</odoo>
